// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id       // Auth0 user ID (e.g., "auth0|123456")
  slug             String?   @unique   // URL-friendly username (e.g., "linda12345")
  displayName      String?             // Display name (can have spaces, emoji, etc.)
  avatarUrl        String?             // Cached from Auth0 user_metadata.picture
  stripeCustomerId String?   @unique   // Business data (not in Auth0)
  stripeAccountId  String?   @unique   // Stripe Connect Express account ID (for sellers)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relationships
  buyerOrders      Order[]    @relation("BuyerOrders")
  listings         Listing[]  @relation("SellerListings")
  collectionItems  CollectionItem[]

  @@index([slug])
  @@index([displayName])
  @@index([stripeCustomerId])
  @@index([stripeAccountId])
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  REFUNDED
}

enum FulfillmentStatus {
  PENDING
  PROCESSING
  SHIPPED
  IN_TRANSIT
  OUT_FOR_DELIVERY
  DELIVERED
  EXCEPTION
  CANCELLED
}

model Order {
  id                    String      @id @default(cuid())
  
  // Buyer (required)
  buyerId               String
  buyer                 User        @relation("BuyerOrders", fields: [buyerId], references: [id])
  
  // Seller (optional for now - defaults to "platform")
  sellerId              String?
  sellerName            String?     // For display purposes
  
  // Payment tracking
  stripeSessionId       String?     @unique
  stripePaymentIntentId String?     @unique
  stripeCustomerId      String?     // For fetching customer addresses from Stripe
  
  // Order details (store amounts in cents to match Stripe)
  description           String      // "Test Payment - Stripe Integration"
  currency              String      @default("USD")
  
  // Amounts (PM-56: all amounts in cents)
  subtotalCents         Int         // Item price before tax/shipping
  taxCents              Int         @default(0)  // Tax calculated by Stripe Tax
  shippingCents         Int         @default(0)  // Shipping cost
  totalCents            Int         // Final amount charged (subtotal + tax + shipping)
  
  // Status tracking
  status                OrderStatus @default(PENDING)
  
  // Shipping & fulfillment (PM-64)
  shippingCarrier       String?              // USPS, UPS, FedEx, DHL
  trackingNumber        String?              // Carrier tracking number
  trackingId            String?              // Shippo tracking ID
  shippedAt             DateTime?            // When seller marked as shipped (for quick queries)
  deliveredAt           DateTime?            // When package was delivered (for quick queries)
  fulfillmentStatus     FulfillmentStatus @default(PENDING)
  
  // Test vs real transactions
  isTestPayment         Boolean     @default(false)
  
  // Audit fields
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  
  // Purchase context (timezone where purchase was made)
  purchaseTimezone      String?     // IANA timezone (e.g., "America/New_York")

  // Optional association to a Listing-based purchase (PM-33)
  listingId                   String?
  listing                     Listing?   @relation(fields: [listingId], references: [id])
  snapshotListingDisplayTitle String?
  snapshotListingImageUrl     String?
  snapshotListingPriceCents   Int?
  
  @@index([buyerId, createdAt])
  @@index([status, createdAt])
  @@index([isTestPayment, createdAt])
  @@index([listingId])
  @@index([stripeCustomerId])
  
  // Relationships
  events        OrderEvent[]
}

enum OrderEventType {
  ORDER_CREATED
  PAYMENT_RECEIVED
  ORDER_SHIPPED
  IN_TRANSIT
  OUT_FOR_DELIVERY
  DELIVERED
  DELIVERY_EXCEPTION
  ORDER_CANCELLED
  ORDER_REFUNDED
}

model OrderEvent {
  id          String         @id @default(cuid())
  orderId     String
  order       Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  type        OrderEventType
  timestamp   DateTime       @default(now())
  
  // Optional metadata (e.g., tracking info, exception reasons, etc.)
  metadata    Json?
  
  // Who triggered the event (null for system/webhook events)
  userId      String?
  
  @@index([orderId, timestamp])
  @@index([type, timestamp])
}

model AuditLog {
  id           String   @id @default(cuid())
  
  // What was changed
  entityType   String   // "Order", "User", "Product", etc.
  entityId     String   // ID of the entity
  action       String   // "CREATE", "UPDATE", "DELETE", "PAYMENT_COMPLETED"
  
  // Who made the change
  userId       String?  // Null for system actions
  ipAddress    String?
  userAgent    String?
  
  // What changed
  changes      Json?    // Store the actual changes
  metadata     Json?    // Additional context
  
  // When
  timestamp    DateTime @default(now())
  
  // Future partitioning support
  partitionKey String   // Format: "2025-01" for monthly partitions
  
  // Future archival support
  archivedToS3 Boolean  @default(false)
  s3Key        String?
  
  @@index([timestamp])
  @@index([entityType, entityId])
  @@index([partitionKey, timestamp])
  @@index([archivedToS3, timestamp])
}

enum ListingStatus {
  DRAFT
  PUBLISHED
  SOLD
}

model Listing {
  id               String         @id @default(cuid())
  sellerId         String
  seller           User           @relation("SellerListings", fields: [sellerId], references: [id])

  displayTitle     String
  sellerNotes      String?
  askingPriceCents Int
  currency         String         @default("USD")
  status           ListingStatus  @default(DRAFT)
  imageUrl         String?

  // Generic card reference (works with any TCG)
  cardId           String?
  card             Card?          @relation(fields: [cardId], references: [id])
  
  // PSA cert number is specific to the instance being listed
  psaCertNumber    String?

  // Link to grading certificate instance
  gradingCertificateId String?
  gradingCertificate   GradingCertificate? @relation(fields: [gradingCertificateId], references: [id])

  // Physical condition of the slab
  slabCondition    SlabCondition?

  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  // Orders created from this listing (single-item purchases)
  orders           Order[]
  
  // Additional photos uploaded by seller (PM-76)
  photos           ListingPhoto[]

  @@index([sellerId, status])
  @@index([status, createdAt])
  @@index([cardId])
  @@index([psaCertNumber])
  @@index([gradingCertificateId])
}

// PM-76: Additional photos for listings (stored in Cloudinary)
model ListingPhoto {
  id         String   @id @default(cuid())
  listingId  String
  listing    Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  publicId   String   // Cloudinary public_id
  url        String   // Cloudinary secure_url
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())

  @@index([listingId])
}

// PM-65: Invitation codes for controlled launch
model InvitationCode {
  id         String    @id @default(cuid())
  code       String    @unique // Pokemon-themed code (e.g., "CHARIZARD-A1B2")
  createdBy  String?   // Admin who created the code
  usedBy     String?   // Auth0 user ID who redeemed it
  usedAt     DateTime? // When the code was redeemed
  createdAt  DateTime  @default(now())

  @@index([code])
  @@index([usedBy])
  @@index([usedAt])
}

enum CardGameType {
  POKEMON
  // Add other TCGs here (e.g., MAGIC_THE_GATHERING, YUGIOH)
}

enum SlabCondition {
  MINT        // Slab is in perfect condition, no visible defects
  NEAR_MINT   // Minor imperfections, light scratches or scuffs
  GOOD        // Noticeable wear, scratches, or minor cracks but structurally sound
  DAMAGED     // Significant cracks, chips, or structural issues
  UNKNOWN     // Self-explanatory
}

enum RemovalReason {
  SOLD
  LOST
  GIFTED
  OTHER
}

model Card {
  id            String       @id @default(cuid())
  gameType      CardGameType @default(POKEMON)
  
  // Direct card identification from grading APIs (PSA, TAG, etc.)
  // These fields come directly from PSA API responses:
  // - Subject: "MEGA CHARIZARD X ex"
  // - Brand: "POKEMON PFL EN-PHANTASMAL FLAMES"
  // - CardNumber: "125"
  // - Variety: "SPECIAL ILLUSTRATION RARE"
  cardName      String?      // From PSA "Subject"
  setName       String?      // From PSA "Brand"
  cardNumber    String?      // From PSA "CardNumber"
  variety       String?      // From PSA "Variety"
  
  // PSA spec ID is at the card level (not listing level)
  // This represents the PSA specification for this card variant
  // Same SpecID = same card variant (used for deduplication)
  psaSpecId     Int?
  
  // Card images from PSA GetImagesByCertNumber endpoint
  frontImageUrl String?      // Front image URL from PSA
  backImageUrl  String?      // Back image URL from PSA
  highestImageGrade Float?   // Highest grade at which images were captured (PSA)
  
  createdAt     DateTime     @default(now())
  updatedAtDb   DateTime     @updatedAt
  
  // Relationships
  listings        Listing[]
  salesData       SalesData[]
  certificates    GradingCertificate[]
  collectionItems CollectionItem[]
  
  @@index([gameType])
  @@index([psaSpecId])
  @@index([cardName])
  @@index([setName])
  @@index([cardNumber])
  // Note: Deduplication by psaSpecId handled in application logic (nullable unique constraint not supported)
}

// Individual grading certificate instance (PSA, TAG, etc.)
model GradingCertificate {
  id             String    @id @default(cuid())
  gradingCompany String
  certNumber     String
  grade          Float?
  gradeLabel     String?
  psaSpecId      Int?
  frontImageUrl  String?
  backImageUrl   String?

  cardId         String?
  card           Card?     @relation(fields: [cardId], references: [id], onDelete: SetNull)

  createdAt      DateTime  @default(now())
  updatedAtDb    DateTime  @updatedAt

  salesData       SalesData[]
  listings        Listing[]
  collectionItems CollectionItem[]

  @@unique([gradingCompany, certNumber])
  @@index([certNumber])
  @@index([gradingCompany])
  @@index([psaSpecId])
  @@index([cardId])
}

model CollectionItem {
  id                   String    @id @default(cuid())
  
  // Owner
  userId               String
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Card reference (denormalized for query efficiency)
  cardId               String
  card                 Card      @relation(fields: [cardId], references: [id])
  
  // Grading certificate (grade, cert number, images)
  gradingCertificateId String
  gradingCertificate   GradingCertificate @relation(fields: [gradingCertificateId], references: [id])
  
  purchasePriceCents   Int?              // What user paid for the card
  slabCondition        SlabCondition?    // Physical condition of the slab
  
  // Timestamps
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  
  // Soft-delete for ownership history
  removedAt            DateTime?         // null = active, set = removed from collection
  removalReason        RemovalReason?    // Why it was removed (SOLD, LOST, GIFTED, OTHER)
  
  @@index([userId, removedAt])               // "My active collection" query
  @@index([gradingCertificateId, removedAt]) // "Who owns this cert?" query
  @@index([cardId])                          // Collection items by card
}

// Generalized sales data model (PM-90)
// Works with any grading company (PSA, TAG, etc.) and any TCG
model SalesData {
  id              String   @id @default(cuid())

  // Link to Card (grading-first approach)
  cardId          String?
  card            Card?    @relation(fields: [cardId], references: [id], onDelete: SetNull)

  gradingCertificateId String?
  gradingCertificate   GradingCertificate? @relation(fields: [gradingCertificateId], references: [id], onDelete: SetNull)

  // Grading company and certificate info
  gradingCompany  String?  // "PSA", "TAG", etc.
  certNumber      String?
  
  // Sale information
  value           Float
  date            DateTime
  isAuction       Boolean  @default(false)
  imageUrl        String?
  title           String?

  // Store full API response for reference
  apiResponse     Json?

  // Source tracking
  source          String?
  sourceId        String?

  createdAt       DateTime @default(now())
  updatedAtDb     DateTime @updatedAt

  @@index([certNumber])
  @@index([cardId])
  @@index([gradingCertificateId])
  @@index([gradingCompany])
  @@index([date])
  @@index([value])
}
