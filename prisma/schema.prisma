// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id       // Auth0 user ID (e.g., "auth0|123456")
  displayName      String?             // Cached from Auth0 user_metadata.displayName
  avatarUrl        String?             // Cached from Auth0 user_metadata.picture
  stripeCustomerId String?   @unique   // Business data (not in Auth0)
  stripeAccountId  String?   @unique   // Stripe Connect Express account ID (for sellers)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relationships
  buyerOrders      Order[]    @relation("BuyerOrders")
  listings         Listing[]  @relation("SellerListings")

  @@index([displayName])
  @@index([stripeCustomerId])
  @@index([stripeAccountId])
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  REFUNDED
}

enum FulfillmentStatus {
  PENDING
  PROCESSING
  SHIPPED
  IN_TRANSIT
  OUT_FOR_DELIVERY
  DELIVERED
  EXCEPTION
  CANCELLED
}

model Order {
  id                    String      @id @default(cuid())
  
  // Buyer (required)
  buyerId               String
  buyer                 User        @relation("BuyerOrders", fields: [buyerId], references: [id])
  
  // Seller (optional for now - defaults to "platform")
  sellerId              String?
  sellerName            String?     // For display purposes
  
  // Payment tracking
  stripeSessionId       String?     @unique
  stripePaymentIntentId String?     @unique
  stripeCustomerId      String?     // For fetching customer addresses from Stripe
  
  // Order details (store amounts in cents to match Stripe)
  description           String      // "Test Payment - Stripe Integration"
  currency              String      @default("USD")
  
  // Amounts (PM-56: all amounts in cents)
  subtotalCents         Int         // Item price before tax/shipping
  taxCents              Int         @default(0)  // Tax calculated by Stripe Tax
  shippingCents         Int         @default(0)  // Shipping cost
  totalCents            Int         // Final amount charged (subtotal + tax + shipping)
  
  // Status tracking
  status                OrderStatus @default(PENDING)
  
  // Shipping & fulfillment (PM-64)
  shippingCarrier       String?              // USPS, UPS, FedEx, DHL
  trackingNumber        String?              // Carrier tracking number
  trackingId            String?              // Shippo tracking ID
  shippedAt             DateTime?            // When seller marked as shipped (for quick queries)
  deliveredAt           DateTime?            // When package was delivered (for quick queries)
  fulfillmentStatus     FulfillmentStatus @default(PENDING)
  
  // Test vs real transactions
  isTestPayment         Boolean     @default(false)
  
  // Audit fields
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  
  // Purchase context (timezone where purchase was made)
  purchaseTimezone      String?     // IANA timezone (e.g., "America/New_York")

  // Optional association to a Listing-based purchase (PM-33)
  listingId                   String?
  listing                     Listing?   @relation(fields: [listingId], references: [id])
  snapshotListingDisplayTitle String?
  snapshotListingImageUrl     String?
  snapshotListingPriceCents   Int?
  
  @@index([buyerId, createdAt])
  @@index([status, createdAt])
  @@index([isTestPayment, createdAt])
  @@index([listingId])
  @@index([stripeCustomerId])
  
  // Relationships
  events        OrderEvent[]
}

enum OrderEventType {
  ORDER_CREATED
  PAYMENT_RECEIVED
  ORDER_SHIPPED
  IN_TRANSIT
  OUT_FOR_DELIVERY
  DELIVERED
  DELIVERY_EXCEPTION
  ORDER_CANCELLED
  ORDER_REFUNDED
}

model OrderEvent {
  id          String         @id @default(cuid())
  orderId     String
  order       Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  type        OrderEventType
  timestamp   DateTime       @default(now())
  
  // Optional metadata (e.g., tracking info, exception reasons, etc.)
  metadata    Json?
  
  // Who triggered the event (null for system/webhook events)
  userId      String?
  
  @@index([orderId, timestamp])
  @@index([type, timestamp])
}

model AuditLog {
  id           String   @id @default(cuid())
  
  // What was changed
  entityType   String   // "Order", "User", "Product", etc.
  entityId     String   // ID of the entity
  action       String   // "CREATE", "UPDATE", "DELETE", "PAYMENT_COMPLETED"
  
  // Who made the change
  userId       String?  // Null for system actions
  ipAddress    String?
  userAgent    String?
  
  // What changed
  changes      Json?    // Store the actual changes
  metadata     Json?    // Additional context
  
  // When
  timestamp    DateTime @default(now())
  
  // Future partitioning support
  partitionKey String   // Format: "2025-01" for monthly partitions
  
  // Future archival support
  archivedToS3 Boolean  @default(false)
  s3Key        String?
  
  @@index([timestamp])
  @@index([entityType, entityId])
  @@index([partitionKey, timestamp])
  @@index([archivedToS3, timestamp])
}

enum ListingStatus {
  DRAFT
  PUBLISHED
  SOLD
}

model Listing {
  id               String         @id @default(cuid())
  sellerId         String
  seller           User           @relation("SellerListings", fields: [sellerId], references: [id])

  displayTitle     String
  sellerNotes      String?
  askingPriceCents Int
  currency         String         @default("USD")
  status           ListingStatus  @default(DRAFT)
  imageUrl         String?

  // Generic card reference (works with any TCG)
  cardId           String?
  card             Card?          @relation(fields: [cardId], references: [id])
  
  // PSA cert number is specific to the instance being listed
  psaCertNumber    String?

  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  // Orders created from this listing (single-item purchases)
  orders           Order[]

  @@index([sellerId, status])
  @@index([status, createdAt])
  @@index([cardId])
  @@index([psaCertNumber])
}

// PM-65: Invitation codes for controlled launch
model InvitationCode {
  id         String    @id @default(cuid())
  code       String    @unique // Pokemon-themed code (e.g., "CHARIZARD-A1B2")
  createdBy  String?   // Admin who created the code
  usedBy     String?   // Auth0 user ID who redeemed it
  usedAt     DateTime? // When the code was redeemed
  createdAt  DateTime  @default(now())

  @@index([code])
  @@index([usedBy])
  @@index([usedAt])
}

enum CardGameType {
  POKEMON
  // Add other TCGs here (e.g., MAGIC_THE_GATHERING, YUGIOH)
}

// Generic Card model - abstraction layer for any TCG
// This allows Listings to work with cards from any game without knowing the specific TCG
model Card {
  id            String       @id @default(cuid())
  gameType      CardGameType @default(POKEMON)
  
  // Polymorphic reference to TCG-specific card
  // For Pokemon cards
  pokemonCardId String?
  pokemonCard   PokemonCard? @relation(fields: [pokemonCardId], references: [id], onDelete: Cascade)
  
  // Future: Add other TCG references here
  // magicCardId  String?
  // magicCard    MagicCard? @relation(...)
  // yugiohCardId String?
  // yugiohCard   YugiohCard? @relation(...)
  
  // PSA spec ID is at the card level (not listing level)
  // This represents the PSA specification for this card variant
  psaSpecId     Int?
  
  createdAt     DateTime     @default(now())
  updatedAtDb   DateTime     @updatedAt
  
  // Relationships
  listings      Listing[]
  
  @@index([gameType])
  @@index([pokemonCardId])
  @@index([psaSpecId])
}

// Pokemon TCG Sets - source of truth from pokemon-tcg-data
model PokemonSet {
  id            String       @id // e.g., "base1", "sv1"
  gameType      CardGameType @default(POKEMON)
  name          String
  series        String
  printedTotal  Int?
  total         Int
  ptcgoCode     String?
  releaseDate   String?
  updatedAt     String?
  logoUrl       String?
  symbolUrl     String?

  legalities    Json? // Legalities stored as JSON for flexibility

  createdAt     DateTime     @default(now())
  updatedAtDb   DateTime     @updatedAt

  pokemonCards  PokemonCard[]

  @@index([series])
  @@index([name])
  @@index([gameType])
}

// Pokemon TCG Cards - source of truth from pokemon-tcg-data
model PokemonCard {
  id                    String   @id // e.g., "base1-1", "sv1-125"
  pokemonSetId          String
  pokemonSet            PokemonSet @relation(fields: [pokemonSetId], references: [id], onDelete: Cascade)

  name                  String
  supertype             String
  subtypes              String[]
  number                String

  cardData              Json? // Full card JSON for complex fields (attacks, abilities, weaknesses, hp, types, evolvesFrom, evolvesTo, etc.)
  metadata              Json? // Metadata like regulationMark, nationalPokedexNumbers, legalities

  imageSmallUrl         String?
  imageLargeUrl         String?

  artist                String?
  rarity                String?
  flavorText            String?

  createdAt             DateTime @default(now())
  updatedAtDb           DateTime @updatedAt

  pokemonPSASpecs       PokemonPSASpec[]
  pokemonSalesData      PokemonSalesData[]
  cards                 Card[]

  @@index([pokemonSetId, number])
  @@index([name])
  @@index([supertype])
  @@index([number])
}

// PSA Specification - maps PSA specIds to Cards for matching cert numbers
// Note: Only PSA can create specIds
model PokemonPSASpec {
  id            String   @id @default(cuid())
  specId        Int      @unique // PSA SpecID (e.g., 14806987)
  specNumber    String?  // PSA SpecNumber (e.g., "KSF4000125")

  pokemonCardId String   // Link to PokemonCard
  pokemonCard   PokemonCard @relation(fields: [pokemonCardId], references: [id], onDelete: Cascade)

  cardNumber    String?
  subject       String?
  variety       String?
  brand         String?
  year          String?
  labelType     String?

  createdAt     DateTime @default(now())
  updatedAtDb   DateTime @updatedAt

  pokemonSalesData PokemonSalesData[]

  @@index([specId])
  @@index([pokemonCardId])
  @@index([cardNumber, subject, variety])
}

// Sales data from PSA API - links to PSASpecs and Cards
model PokemonSalesData {
  id              String   @id @default(cuid())

  pokemonPSASpecId String?
  pokemonPSASpec  PokemonPSASpec? @relation(fields: [pokemonPSASpecId], references: [id], onDelete: SetNull)

  pokemonCardId   String?
  pokemonCard     PokemonCard? @relation(fields: [pokemonCardId], references: [id], onDelete: SetNull)

  certNumber      String?
  value           Float
  date            DateTime
  isAuction       Boolean  @default(false)
  imageUrl        String?
  title           String?

  psaApiResponse  Json?

  source          String?
  sourceId        String?

  createdAt       DateTime @default(now())
  updatedAtDb     DateTime @updatedAt

  @@index([certNumber])
  @@index([pokemonCardId])
  @@index([pokemonPSASpecId])
  @@index([date])
  @@index([value])
}
